<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mediaLibraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.practicum.playlistmaker3.search.ui.viewActivity.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
    </fragment>

    <fragment
        android:id="@+id/mediaLibraryFragment"
        android:name="com.practicum.playlistmaker3.mediaLibrary.ui.viewActivity.MediaLibraryFragment"
        android:label="fragment_media_library"
        tools:layout="@layout/fragment_media_library">
        <action
            android:id="@+id/action_mediaLibraryFragment_to_playListFragment"
            app:destination="@id/playListFragment" />
        <action
            android:id="@+id/action_mediaLibraryFragment_to_currentPlaylistFragment"
            app:destination="@id/currentPlaylistFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.practicum.playlistmaker3.settings.ui.viewActivity.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings">
    </fragment>

    <fragment
        android:id="@+id/playListFragment"
        android:name="com.practicum.playlistmaker3.mediaLibrary.ui.viewActivity.PlayListFragment"
        android:label="PlayListFragment"
        tools:layout="@layout/fragment_playlist"/>

    <fragment
        android:id="@+id/currentPlaylistFragment"
        android:name="com.practicum.playlistmaker3.mediaLibrary.ui.viewActivity.CurrentPlaylistFragment"
        android:label="CurrentPlaylistFragment"
        tools:layout="@layout/fragment_current_playlist">

        <action
            android:id="@+id/action_currentPlaylistFragment_to_editablePlaylistFragment"
            app:destination="@id/editablePlaylistFragment" />
    </fragment>

    <fragment
        android:id="@+id/editablePlaylistFragment"
        android:name="com.practicum.playlistmaker3.mediaLibrary.ui.viewActivity.EditablePlaylistFragment"
        android:label="EditablePlaylistFragment"
        tools:layout="@layout/fragment_playlist"/>
</navigation>