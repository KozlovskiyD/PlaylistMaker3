<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_4"
        android:layout_marginTop="@dimen/top_4">

        <ImageView
            android:id="@+id/back_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_padding"
            android:layout_marginTop="@dimen/top_padding"
            android:backgroundTint="@color/white"
            android:src="@drawable/vector_strelochka"
            android:contentDescription="@string/setting"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="@dimen/icon_text"
            android:layout_marginBottom="12dp"
            android:text="@string/setting"
            android:textColor="@color/black"
            android:textSize="@dimen/text_button">

        </TextView>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:layout_marginTop="28dp"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd="10dp">

        <TextView
            android:layout_width="@dimen/widht_300"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_21"
            android:text="@string/nitgh"
            android:textColor="@color/black"
            android:textSize="@dimen/texts_16">

        </TextView>

        <Switch
            android:id="@+id/switch2"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginVertical="7dp"
            android:layout_marginTop="@dimen/icon_text"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd="@dimen/top_21">

        <TextView
            android:layout_width="@dimen/widht_300"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_21"
            android:gravity="start"
            android:text="@string/to_share"
            android:textColor="@color/black"
            android:textSize="@dimen/texts_16">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/top_22"
            android:contentDescription="@string/to_share"
            android:src="@drawable/vectorto_share"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd="@dimen/top_21"
        android:textColor="@color/black">

        <TextView
            android:layout_width="@dimen/widht_300"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_21"
            android:gravity="start"
            android:text="@string/write_to"
            android:textColor="@color/black"
            android:textSize="@dimen/texts_16">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/top_22"
            android:contentDescription="@string/write_to"
            android:src="@drawable/group"
            tools:ignore="ImageContrastCheck" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_61"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd="23dp">

        <TextView
            android:layout_width="@dimen/widht_300"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_21"
            android:gravity="start"
            android:text="@string/agreement"
            android:textColor="@color/black"
            android:textSize="@dimen/texts_16">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/icon_24"
            android:contentDescription="@string/agreement"
            android:src="@drawable/vector_agreement"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>
</LinearLayout>