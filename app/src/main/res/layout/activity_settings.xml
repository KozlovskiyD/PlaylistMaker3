<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PlaylistMaker"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/top_4"
        android:layout_marginTop="@dimen/top_4">

        <ImageView
            android:id="@+id/back_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/top_padding"
            android:layout_marginTop="@dimen/top_padding"
            android:backgroundTint="@color/white"
            android:src="@drawable/vector_the_arrow"
            android:contentDescription="@string/setting"/>

        <TextView
            style="@style/headingText"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginTop = "@dimen/top_padding"
            android:layout_marginStart = "@dimen/top_28"
            android:text="@string/setting"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/height_61"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd = "@dimen/top_24"
        android:layout_marginTop="@dimen/top_28">

        <TextView
            style="@style/MessageTextStyle"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nitgh"/>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="18dp"
            android:layout_marginTop="@dimen/icon_text"
            android:thumbTint="?attr/colorPrimaryVariant"
            android:trackTint="?attr/colorPrimaryVariant"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/shar"
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/height_61"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd = "@dimen/top_24">

        <TextView
            style="@style/MessageTextStyle"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_share"/>

        <ImageView
            style="@style/vectors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/to_share"
            android:src="@drawable/vector_to_share"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/write_to"
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/height_61"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd = "@dimen/top_24">

        <TextView
            style="@style/MessageTextStyle"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_to"/>

        <ImageView
            style="@style/vectors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/write_to"
            android:src="@drawable/group"
            tools:ignore="ImageContrastCheck" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/user_agreement"
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/height_61"
        android:paddingStart="@dimen/top_padding"
        android:paddingEnd = "@dimen/top_24">

        <TextView
            style="@style/MessageTextStyle"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agreement"/>

        <ImageView
            style="@style/vectors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/agreement"
            android:src="@drawable/vector_agreement"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>
</LinearLayout>