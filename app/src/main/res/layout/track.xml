<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardTrack"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_61"
    android:theme="@style/Theme.PlaylistMaker"
    android:background="?attr/colorSecondary">

    <ImageView
        android:id="@+id/imageTrack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="@dimen/top_8"
        android:scaleType="centerCrop"
        android:contentDescription="@string/search" />

    <TextView
        android:id="@+id/tvTrackName"
        style="@style/MessageTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="@dimen/top_28"
        android:maxLines="1"
        android:ellipsize="end" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="@dimen/top_28"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvArtistName"
            style="@style/ArtistTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ellipse_1" />

        <TextView
            android:id="@+id/tvTrackTime"
            style="@style/ArtistTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivTrack"
        style="@style/vectors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/top_8"
        android:contentDescription="@string/app_name"
        android:src="@drawable/vector_agreement"/>

</FrameLayout>