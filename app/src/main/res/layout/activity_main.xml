<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PlaylistMaker"
    android:background="?attr/colorOnSecondary"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/top_padding"
    android:paddingBottom="@dimen/top_28">

    <TextView
        style="@style/headingText"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "@dimen/top_padding"
        android:gravity="start"
        android:text="@string/app_name"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/search_button"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height = "@dimen/layout_height"
        android:layout_weight = "1"
        android:layout_marginTop="@dimen/top_40"
        android:text="@string/search"
        app:icon="@drawable/vector_search"/>

    <Button
        android:id="@+id/media_button"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height = "@dimen/layout_height"
        android:layout_weight = "1"
        android:layout_marginTop="@dimen/top_padding"
        android:text="@string/media"
        app:icon="@drawable/vector_media"/>

    <Button
        android:id="@+id/setting_button"
        style="@style/main_button"
        android:layout_width="match_parent"
        android:layout_height = "@dimen/layout_height"
        android:layout_weight = "1"
        android:layout_marginTop="@dimen/top_padding"
        android:text="@string/setting"
        app:icon="@drawable/vector_setting"/>

</LinearLayout>