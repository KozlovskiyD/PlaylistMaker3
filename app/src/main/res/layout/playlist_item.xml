<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_marginHorizontal="@dimen/top_4"
        android:layout_marginBottom="@dimen/top_padding"
        android:background="@null"
        android:theme="@style/Theme.PlaylistMaker"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_playlist_placeholder"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:background="@drawable/frame_text"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/text_name_playlist"
            style="@style/PlaylistHintTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_4"
            android:background="?attr/colorSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryVariant" />

        <TextView
            android:id="@+id/text_description_playlist"
            style="@style/PlaylistHintTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryVariant" />

    </LinearLayout>