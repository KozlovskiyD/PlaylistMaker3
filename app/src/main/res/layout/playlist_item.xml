<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/top_4"
    android:layout_marginBottom="@dimen/top_padding"
    android:theme="@style/Theme.PlaylistMaker"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_playlist_placeholder"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerInside"
            android:background="?attr/colorSecondary" />

        <TextView
            android:id="@+id/text_name_playlist"
            style="@style/PlaylistHintTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryVariant" />

        <TextView
            android:id="@+id/text_description_playlist"
            style="@style/PlaylistHintTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryVariant" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

